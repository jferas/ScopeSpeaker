<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ferasinfotech.scopespeaker.ScopeSpeakerActivity"
    tools:showIn="@layout/activity_scope_speaker">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp">

        <Button
            android:id="@+id/chat_action"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="chatAction"
            android:text="Say Periscope Messages of"
            android:layout_alignParentLeft="true" />

        <Button
            android:id="@+id/save_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="saveChatToClipboard"
            android:text="Copy" />
    </RelativeLayout>

    <EditText
        android:id="@+id/username"
        android:text="Broadcaster Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp">

        <Switch
            android:id="@+id/join_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Join Msgs" />

        <Switch
            android:id="@+id/toggle_text_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Text Dsply" />

        <Switch
            android:id="@+id/left_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Left Msgs" />

        <!--
                <Button
                    android:id="@+id/join_messages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:onClick="toggleJoinMessages"
                    android:text="Disable Joins" />

        <Button
            android:id="@+id/toggle_text_display"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="toggleTextDisplay"
            android:text="Disable Text"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/left_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:onClick="toggleLeftMessages"
            android:text="Disable Lefts" />
        -->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginTop="4dp" >

        <TextView
            android:text="Queue Full"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentLeft="true" />

        <TextView
            android:text="Queue Open"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textStyle="bold" />

        <TextView
            android:text="Pause (secs)"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="4dp" >

        <EditText
            android:id="@+id/high_water_mark"
            android:text="10"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true" />

        <EditText
            android:id="@+id/low_water_mark"
            android:text="5"
            android:layout_width="120dp"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/after_msg_pause"
            android:text="0"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <LinearLayout android:background="@drawable/border"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        android:padding="2dp">

        <WebView android:id="@+id/messageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#000000"
            android:focusable="false"/>
    </LinearLayout>

</LinearLayout>
